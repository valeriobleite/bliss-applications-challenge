<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pt.leite.valerio.blissapplicationschallenge">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="pt.leite.valerio.blissapplicationschallenge.ui.BlissApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlissAplicationsChallenge"
        tools:ignore="AllowBackup">
        <activity android:name="pt.leite.valerio.blissapplicationschallenge.ui.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="pt.leite.valerio.blissapplicationschallenge.ui.emoji_list.EmojiListActivity" android:screenOrientation="portrait" />
        <activity android:name="pt.leite.valerio.blissapplicationschallenge.ui.avatar_list.AvatarListActivity" android:screenOrientation="portrait" />
        <activity android:name="pt.leite.valerio.blissapplicationschallenge.ui.repos_list.RepoListActivity" android:screenOrientation="portrait" />
    </application>

</manifest>